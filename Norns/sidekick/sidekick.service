[Unit]
Description=Sidekick service for norns
DefaultDependencies=no
Wants=network-online.target
After=network-online.target
Conflicts=shutdown.target
Before=shutdown.target 

[Service]
Type=simple
User=we
Group=we
Environment=HOME=/home/we
KillMode=process
Restart=always
WorkingDirectory=/home/we/sidekick
ExecStart=/usr/local/sidekick/sidekick

[Install]
WantedBy=default.target
